@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticlesMain>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}
<div id="main-container" class="articles">
    <div id="main" class="wrapper clearfix">
        <section>
		<div class="clearfix intro">
            <h2 class="title">@Umbraco.Field("articlesTitle")</h2>
            <p>@Umbraco.Field("articlesBodyText")</p>
		</div>
			@Umbraco.RenderMacro("listArticles")
        </section>  
    </div> <!-- #main -->
</div> <!-- #main-container -->